# Add `~/bin` to the `$PATH`
export PATH="$HOME/bin:/usr/local/bin:/usr/local/sbin:$PATH"

BREW_PREFIX="${HOMEBREW_PREFIX:-$(brew --prefix)}"

# Python: Unversioned prefixed python commands
export PATH="${BREW_PREFIX}/opt/python@3.14/libexec/bin:$PATH"

# SQL Plus
# export PATH=~/instantclient_12_2:$PATH

# Python
# export PATH="$HOME/Library/Python/3.9/bin:$PATH"
# pipx
export PATH="$HOME/.local/bin:$PATH"


# Symfony
export PATH="$HOME/.symfony/bin:$PATH"

# PHP
#export PATH="${BREW_PREFIX}/opt/php/bin:$PATH"
#export PATH="${BREW_PREFIX}/opt/php/sbin:$PATH"
# Temporarily lock to 8.3 while packages catch up.
export PATH="${BREW_PREFIX}/opt/php@8.3/bin:$PATH"
export PATH="${BREW_PREFIX}/opt/php@8.3/sbin:$PATH"

# MySQL client
export PATH="${BREW_PREFIX}/opt/mysql-client/bin:$PATH"

# Composer
# export PATH="$PATH:vendor/bin"
# Add user's composer vendor bin to `$PATH`
export PATH="$PATH:$HOME/.composer/vendor/bin"

# Ruby using rbenv, see .exports
# https://github.com/rbenv/rbenv
#export PATH="${BREW_PREFIX}/opt/ruby/bin:$PATH"

# Java using jenv, see .exports
#export PATH="${BREW_PREFIX}/opt/openjdk@11/bin:$PATH"

# SSH Copy ID
export PATH="${BREW_PREFIX}/opt/ssh-copy-id/bin:$PATH"

# GNU sed
export PATH="${BREW_PREFIX}/opt/gnu-sed/libexec/gnubin:$PATH"

# GNU find, xargs, locate, and updatedb
export PATH="${BREW_PREFIX}/opt/findutils/libexec/gnubin:$PATH"

# GNU patch
export PATH="${BREW_PREFIX}/opt/gpatch/libexec/gnubin:$PATH"
